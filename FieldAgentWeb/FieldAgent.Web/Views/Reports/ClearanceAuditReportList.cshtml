@model List<FieldAgent.Core.DTOs.ClearanceAuditListItem>

@{
    ViewBag.Title = $"Agents with Clearance List";
}

<h1>Agents with Clearance</h1>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Badge ID</th>
                <th>Name</th>
                <th>Date Of Birth</th>
                <th>Activation Date</th>
                <th>Deactivation Date</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var agent = Model[i];
                string dob = $"{agent.DateOfBirth:d}";
                string ad = $"{agent.ActivationDate:d}";
                string dd = $"{agent.DeactivationDate:d}";
                <tr>
                    <td>@agent.BadgeId</td>
                    <td>@agent.NameLastFirst</td>
                    <td>@dob</td>
                    <td>@ad</td>
                    <td>@dd</td>
                </tr>
            }
        </tbody>
    </table>
</div>
